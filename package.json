{
  "name": "shp-js",
  "version": "1.0.0",
  "description": "Shapefile parser with THREE.js integration for visualizing geographic data",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "shp-compress": "./dist/tools/shp-compress.js"
  },
  "exports": {
    ".": {
        "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs"
    },
    "./three": {
        "types": "./dist/three.d.ts",
      "import": "./dist/three.esm.js",
      "require": "./dist/three.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "tools"
  ],
  "scripts": {
    "build": "rollup -c && npm run build:cli",
    "build:cli": "mkdir -p dist && tsc tools/shp-compress.ts --skipLibCheck --module nodenext --outDir dist",
    "build:demo": "vite build",
    "dev": "vite",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "compress": "node dist/tools/shp-compress.js"
  },
  "keywords": [
    "shapefile",
    "shp",
    "gis",
    "geographic",
    "map",
    "three.js",
    "threejs",
    "3d",
    "visualization"
  ],
  "author": "Ilmari Heikkinen",
  "license": "Apache-2.0",
  "homepage": "https://github.com/kig/shp.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kig/shp.js.git"
  },
  "bugs": {
    "url": "https://github.com/kig/shp.js/issues"
  },
  "peerDependencies": {
    "three": ">=0.150.0"
  },
  "peerDependenciesMeta": {
    "three": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^25.0.3",
    "@types/three": "^0.169.0",
    "rollup": "^4.28.0",
    "rollup-plugin-dts": "^6.1.1",
    "three": "^0.170.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "undici-types": "^7.16.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
